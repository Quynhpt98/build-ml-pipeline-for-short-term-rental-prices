name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Input artifact
        type: string

      output_artifact:
        description: Output artifact
        type: string

      output_type:
        description: Output type
        type: string

      min_price:
        description: min price
        type: float
      
      max_price:
        description: max price
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact} \
                      --output_artifact {output_artifact} \
                      --output_type {output_type} \
                      --min_price {min_price} \
                      --max_price {max_price}